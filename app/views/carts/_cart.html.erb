<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Shopping Cart</h2>

  <ul class="list-none list-inside">
    <% cart.line_items.each do |item| %>
      <li>
        <%= item.product.title %> <%= number_to_currency(item.product.price) %>
      </li>
    <% end %>
  </ul>
</div>
