<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Shopping Cart</h2>

  <table class="table-auto">
    <%= render @cart.line_items %>

    <tfoot>
    <tr>
      <td class="text-right font-bold pt-8" colspan="3">Total</td>
      <td class="font-bold pl-5 pt-8"><%= number_to_currency(cart.total_price) %></td>
    </tr>
    </tfoot>
  </table>
</div>

<div class="flex mt-1">
  <%= button_to 'Empty Cart', cart, method: :delete, class: 'ml-4 rounded-lg py-1 px-2 text-white bg-blue-400 my-5' %>
  <%= button_to 'Checkout', new_order_path, method: :get, class: 'ml-4 rounded-lg py-1 px-2 text-white bg-blue-400 my-5' %>
</div>
