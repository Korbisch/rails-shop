<div class="w-full">
  <%= render 'notice' %>

  <h1 class="font-bold text-4xl mb-8">Rails Shop Catalog</h1>

  <%= turbo_stream_from 'products' %>

  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>